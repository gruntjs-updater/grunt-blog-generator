.row
  .col-sm-2
  .col-sm-8.g-blog-main
    | {{#each p}}
    .g-blog-post
      h2.g-blog-post-title
        a(href="/post?title={{title}}") {{title}}
      p.g-blog-post-preview {{preview}}
      p.g-blog-post-footer
        span.g-blog-post-meta updated {{time updatedAt}} by
          a(href="#") &nbsp;{{author}}
        span.g-blog-post-share
          a
            span.glyphicon.glyphicon-star
    | {{/each}}
  .col-sm-2